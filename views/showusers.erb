<h2>Список клиентов:</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Имя</th>
      <th scope="col">Телефон</th>
      <th scope="col">Дата записи</th>
      <th scope="col">Парикмахер</th>
      <th scope='col'>Цвет</th>
    </tr>
  </thead>

  <tbody>
      <% @results.each do |row| %>
        <tr>
          <th><%= row['username'] %></th>
          <td><%= row['phone'] %></td>
          <td><%= row['datestamp'] %></td>
          <td><%= row['barber'] %></td>
          <td style="background-color: <%= row['color'] %>"><%= row['color'] %></td>
        </tr>
      <% end %>
  </tbody>
</table>